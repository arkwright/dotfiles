<?xml version="1.0"?>
<root>
  <!-- TAB key changed to act as ESC -->
  <item>
    <name>Change Tab to Esc</name>
    <identifier>private.tabesc</identifier>
    <autogen>--KeyToKey-- KeyCode::TAB, KeyCode::ESCAPE</autogen>
  </item>

  <!-- ESC key changed to act as TAB -->
  <item>
    <name>Change Esc to Tab</name>
    <identifier>private.esctab</identifier>
    <autogen>--KeyToKey-- KeyCode::ESCAPE, KeyCode::TAB</autogen>
  </item>

  <!-- CONTROL_L+i key changed to act as TAB -->
  <item>
    <name>Change CONTROL_L+i to Tab</name>
    <identifier>private.ctrlitab</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::I, ModifierFlag::CONTROL_L,
      KeyCode::TAB
    </autogen>
  </item>
</root>
